class Node:
    def __init__(self, value):
        self.data = value
        self.next = None

class Stack:
    def __init__(self):
        self.top = None

    def push(self, value):
        new_node = Node(value)
        new_node.next = self.top
        self.top = new_node

    def pop(self):
        if self.top is None:
            return "Stack is empty"
        popped = self.top.data
        self.top = self.top.next
        return popped

    def peek(self):
        if self.top is None:
            return "Stack is empty"
        return self.top.data

    def is_empty(self):
        return self.top is None


# Example
s = Stack()
s.push(10)
s.push(20)
s.push(30)

print("Top:", s.peek())   # 30
print("Popped:", s.pop()) # 30
print("Top after pop:", s.peek()) # 20
